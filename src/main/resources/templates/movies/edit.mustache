{{>layouts/header}}

<form class="container" action="/movies/update" method="post">
    <input type="hidden" name="id" value="{{movie.id}}">
    <div class="mb-3">
        <label class="form-label">영화 제목</label>
        <input type="text" class="form-control" name="title" value="{{movie.title}}">
    </div>

    <div class="mb-3">
        <label class="form-label">포스터</label>
        <input type="text" class="form-control" name="posterPhoto" value="{{movie.posterPhoto}}">
    </div>

    <div class="mb-3">
        <label class="form-label">관람일</label>
        <input type="date" class="form-control" name="watchedDate" value="{{movie.watchedDate}}">
    </div>

    <div class="mb-3">
        <label class="form-label">개봉일</label>
        <input type="date" class="form-control" name="releaseDate" value="{{movie.releaseDate}}">
    </div>

    <div class="mb-3">
        <label class="form-label">평점</label>
        <input type="number" step="0.1" min="0" max="10" class="form-control" name="rating" value="{{movie.rating}}">
    </div>

    <div class="mb-3">
        <label class="form-label">관람평</label>
        <textarea class="form-control" rows="4" name="review">{{movie.review}}</textarea>
    </div>

    <div class="form-check mb-3">
        <input class="form-check-input" type="checkbox" name="isFavorite"
               value="true" {{#movie.isFavorite}}checked{{/movie.isFavorite}}>
        <label class="form-check-label">즐겨찾기</label>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
    <a href="/movies/{{movie.id}}">Back</a>
</form>

{{>layouts/footer}}
