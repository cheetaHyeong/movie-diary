{{>layouts/header}}

<div class="container my-3 d-flex justify-content-between align-items-center">
    <h2 class="mb-0">영화 일지</h2>
    <a href="/movies?sort=favorite" class="btn btn-outline-warning btn-sm">⭐ 즐겨찾기 순</a>
</div>


<div class="container mt-4">
    <section>
        <div>
            <div class="list_with_upthumb" id="movie_list">
                {{#movieList}}
                    <div class="list_with_upthumb_item">
                        <a href="/movies/{{id}}" class="no-decoration">
                            <div class="img_wrap">
                                <img src="{{posterPhoto}}" alt="사진없음" class="img_thumb"/>
                            </div>
                            <div class="title">
                                <span>{{title}}</span>
                                {{#isFavorite}}<span>⭐</span>{{/isFavorite}}
                            </div>
                        </a>
                    </div>
                {{/movieList}}
            </div>
        </div>
    </section>
    {{^movieList}}
        <tr>
            <td colspan="7" class="text-center">등록된 영화가 없습니다.</td>
        </tr>
    {{/movieList}}

    <a href="/movies/new" class="btn btn-primary my-3">등록</a>
</div>

{{#msg}}
    <div class="alert alert-success text-center">
        {{msg}}
    </div>
{{/msg}}

{{>layouts/footer}}